{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        
        "esModuleInterop": true,
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "allowJs": true,
        "sourceMap": true,
        "noEmit": true,
        "baseUrl": ".",
        "rootDirs": [
            "src",
            "tests"
        ],
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/axios"
        ],
        "typeRoots" : ["./types", "./node_modules/@types"],
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*", "types/*.d.ts"],
    "exclude": ["node_modules", ".nuxt", "dist"]
}
